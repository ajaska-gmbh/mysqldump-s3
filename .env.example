# Local Development Configuration
# NOTE: This file is for local development only.
# Integration tests use environment variables set by docker-compose.test.yml

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_USER=testuser
MYSQL_PASSWORD=testpass
MYSQL_DATABASE=testdb
MYSQL_ROOT_PASSWORD=test_password

# Legacy DB environment variables (for backward compatibility)
DB_HOST=localhost
DB_PORT=3307
DB_USER=testuser
DB_PASSWORD=testpass
DB_NAME=testdb

# S3/MinIO Configuration
S3_BUCKET=test-backups
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT_URL=http://localhost:9090
S3_FORCE_PATH_STYLE=true

# Backup Configuration (optional)
BACKUP_PREFIX=backup
BACKUP_SCHEDULE=0 2 * * *
UPLOAD_PART_SIZE=5242880
MAX_CONCURRENT_UPLOADS=4

# Application Settings
NODE_ENV=development
LOG_LEVEL=info